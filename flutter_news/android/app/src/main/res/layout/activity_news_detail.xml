<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".NewsDetailActivity">
	<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
	                                             android:layout_height="wrap_content"
	                                             android:padding="8dp">
		<ImageView android:layout_width="35dp" android:layout_height="35dp"
		           android:src="@drawable/launch_background" app:layout_constraintBottom_toBottomOf="parent"
		           app:layout_constraintTop_toTopOf="parent"
		           android:id="@+id/iv_back"
		           android:clickable="true"/>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:text="此处添加标题" android:textSize="18sp"
		          app:layout_constraintTop_toTopOf="parent"
		          app:layout_constraintBottom_toBottomOf="parent"
		          app:layout_constraintLeft_toLeftOf="parent"
		          app:layout_constraintRight_toRightOf="parent"
		          android:maxEms="10"
		          android:id="@+id/tv_title"
		/>
	</android.support.constraint.ConstraintLayout>
	<WebView android:layout_width="match_parent" android:layout_height="match_parent"
	         android:id="@+id/wv">

	</WebView>
</LinearLayout>